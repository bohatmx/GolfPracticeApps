<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.boha.golfpractice.library.fragments.SessionListFragment">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/mon_margin">
        <TextView
            android:id="@+id/title"
            style="@style/Title2TextStyleBlue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/mon_margin"
            android:text="Golf Courses" />

        <TextView
            android:id="@+id/count"
            style="@style/Title2TextStyleBlue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/mon_margin"
            android:text="0" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/bottom"
        android:layout_below="@id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/mon_margin"
        android:layout_marginLeft="@dimen/mon_margin">
        <TextView
            android:id="@+id/subtitle"
            style="@style/TextStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/mon_margin"
            android:text="Select the Golf Course for the Session" />


    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_margin="@dimen/mon_padding"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/bottom" />



</RelativeLayout>
